<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/text_blue_press" android:startColor="@color/text_blue_press" />

            <stroke android:width="1dp" android:color="#dddddd" />

            <corners android:radius="5dp"/>

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="@color/text_blue_press" android:startColor="@color/text_blue_press" />

            <stroke android:width="1dp" android:color="#dddddd" />

            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/text_blue" android:startColor="@color/text_blue" />

            <stroke android:width="1dp" android:color="#ffffff" />

            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>